@import './includes/mixins.styl'


$color1 = #5a999b
$color11 = lightness($color1, 95%)
$color12 = lightness($color1, 80%)
$color13 = lightness($color1, 70%)
$color14 = lightness($color1, 55%)

$color2 = #fff





html
	font-family Arial
	font-size 1px
html,body
	clean()
	color darken($color1, 50%)
body
	margin 10px
a
	color inherit
	text-decoration none
	
main
	font-size 17rem
	
button
	font-size inherit



.but
	background $color14
	box-sizing border-box
	user-select none
	padding 10px
	cursor pointer
	text-align center
	outline none
	color $color2
	border none
	&:hover
		background $color13

.none
	display none !important

.bold
	font-weight 900
.main
	display grid
	grid-template-columns repeat(5, 1fr)
	grid-template-rows repeat(2 ,200px) 100px
	grid-column-gap 15px
	grid-row-gap 15px
	grid-template-areas  "cities detail detail detail user" "cities detail detail detail ." "attrs attrs attrs attrs ."
	.attrs
		grid-area attrs
	.cities
		grid-area cities
		display flex
		flex-direction column
		justify-content space-between
		

	.current-city-main
		grid-area detail
	.user-logged, .user
		grid-area user
		border 0
	>*
		box-sizing border-box
		border 2px solid $color12

	.add-city
		size(100%, 20px)
		position rel
		user-select none
		text-align right
		.add-fields
			display flex
			justify-content space-between
			flex-wrap wrap
			width 100%
			padding 10px
			box-sizing border-box
			.field
				flex 1
				&:first-child
					margin-right 10px
			span, input
				display block
			span
				margin-bottom 5px
			input
				outline none
				padding 5px 0
				font-size 15rem
				border 1px solid $color12
				width 100%
			.but
				width 100%
				padding-right 1px
				margin-top 10px
		.add-cross
			size(20px, 20px)
			margin 10px
			cursor pointer
			transition transform .3s
			transform rotate(0deg)
			text-align right
			display inline-block
			&.rotate
				transform rotate(45deg)
			svg *
				fill $color1
			&:hover
				svg *
					fill $color14
	.table
		border-collapse collapse
		user-select none
		overflow auto
		display flex
		size(100%)
		flex-direction column
		
		.tr, .th
			cursor pointer
			display flex
			flex-direction column
			height 60px
			box-sizing border-box
			border-bottom 1px solid $color12
			padding 10px
			.td
				border 1px solid $color1e
				box-sizing border-box
				flex 1
			&:first-child
				background $color14
				color #fff
	.attrs
		.table
			.th, .tr
				flex-direction row
				border-bottom 0
				.td
					border 1px solid $color12
					border-right 0
					padding 10px
				
			.tr
				padding 0
				.td:first-child
					display none
				.td:nth-child(2)
					border-left 0
			.th
				padding 0
				.td
					border-color $color12
					border-top 0
					&:first-child
						border-left 0
				
			
	.cities
		justify-content flex-start
		position rel
		.table-wrapp
			height calc(415px - 53px)
			overflow-y auto
			&::-webkit-scrollbar 
				display none
		.table
			height auto
			.th, .tr
				&:hover
					background $color12
				&.select
					background $color14
					color #fff
			.th
				display none
			.tr
				background $color11
			.td
				&.td:first-child
					display none
				&:last-child
					font-size 10rem
				
	.region-check
		user-select none
		box-sizing border-box
		padding 15px 10px
		font-size 13rem
		border-top 1px solid $color12
		position rel
		justify-self flex-end
		width 100%
		background $color2
		label
			display flex
			cursor pointer
			align-items center
			.input-checkbox
				size(18px)
				box-sizing border-box
				border 2px solid $color13
				margin-right 10px
			input:checked + .input-checkbox
				background $color13
				border 0
			span
				order 2
				margin-top 1px
			input
				order 1
				
				display none
			&:after
				content ' '
				xy()
				size(100%)
				z-index -1
				background $color12
				pointer-events none
				opacity 0
				
	.current-city-main
		display block
	.current-city
		// border 1px solid $color1
		size(100%)
		min-width 300px
		display inline-block
		padding 10px
		.title
			font-size 25rem
			margin-bottom 15px
	

	.user-wrapp
		border 0
	.user-auth
		flex-center()
		background $color14
		size(250px, 40px)
		cursor pointer
		color $color2


	.user-logged
		padding 10px
		text-align center
		height 50%
		border 2px solid $color12
		span:first-letter
			text-transform uppercase
		.name
			font-size 20rem
			margin-bottom 5px
		.region
			font-size 15rem
		.exit
			font-size 13rem
			margin-top 10px
			text-decoration underline
			cursor pointer
			
	.user-auth-link
		border 0
		height 40px
		flex-center()
	.user-bg
		xy(fixed)
		size(100%)
		background $color1
		// opacity .3
		background rgba($color1, .3)
	.user
		size(300px, auto)
		display flex
		flex-direction column
		border 2px solid $color13
		align-items center
		padding 20px
		xy(0, 0)
		-x-y(0, 0)
		position fixed
		margin auto
		height 350px
		z-index 90
		background #fff
		>*
			width 100%
			margin 15px 0
		.title
			white-space nowrap
			user-select none
			cursor pointer
			text-align center
			display flex
			font-size 15rem
			color $color2
			height 80px
			width calc(100% +40px)
			margin-top -20px
			background $color14
			box-sizing border-box
			justify-content space-between
			align-items center
			align-content center
			font-size 20rem
			.select
				padding 10px
				height 100%
				flex 1
				box-sizing border-box
				flex-center()
			.bold
				font-weight 300
				background $color2
				color $color14
			// 	text-decoration initial
			// &.inverse
			// 	.select:first-child
			// 		order 1
					
		.field
			display flex
			justify-content space-between
			align-items center
			user-select none
			input
				padding 5px 10px
				font-size 18rem
				outline none
		.but
			background $color14
			width 70%
			box-sizing border-box
			user-select none
			padding 10px
			cursor pointer
			text-align center
			outline none
			color $color2
			border none
			&:hover
				background $color13