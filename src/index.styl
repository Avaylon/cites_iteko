@import './includes/mixins.styl'

html
	font-family Arial
	font-size 1px
html,body
	clean()
body
	margin 10px

a
	color inherit
	text-decoration none
	
main
	font-size 17rem
	
button
	font-size inherit

$color1 = #000
$color2 = lightness($color1, 80%)
$color3 = lightness($color1, 70%)

.none
	display none !important

.bold
	font-weight 900
.main
	display grid
	grid-template-columns repeat(5, 1fr)
	grid-template-rows repeat(5 ,20vh)
	grid-column-gap 15px
	grid-row-gap 15px
	grid-template-areas  "cities detail detail detail user" "cities detail detail detail ." "attrs attrs attrs attrs ."
	.attrs
		grid-area attrs
	.cities
		grid-area cities
		display flex
		flex-direction column
		justify-content space-between
		

	.current-city-main
		grid-area detail
	.user-logged, .user
		grid-area user		
	>*
		box-sizing border-box
		border 2px solid $color2
	.table
		border-collapse collapse
		user-select none
		overflow auto
		display flex
		size(100%)
		flex-direction column
		
		.tr, .th
			cursor pointer
			display flex
			flex-direction column
			height 60px
			box-sizing border-box
			border-bottom 1px solid $color2
			padding 10px
			.td
				border 1px solid $color1e
				box-sizing border-box
				flex 1

					

			&:first-child
				background $color3
	

	.attrs
		.table
			.th, .tr
				flex-direction row
				border-bottom 0
				
			.tr
				.td:first-child
					display none
				
			
	.cities
		.table
			.th, .tr
				&.select
					background $color2
				&:hover
					background $color2
			.th
				display none
			.td
				&.td:first-child
					display none
				&:last-child
					font-size 10rem
				
	.region-check
		user-select none
		box-sizing border-box
		padding 10px
		font-size 13rem
		border-top 1px solid $color2
		position rel
		label
			display flex
			cursor pointer
			align-items center
			span
				order 2
				margin-top 1px
			input
				order 1
				margin-right 10px
			&:after
				content ' '
				xy()
				size(100%)
				z-index -1
				background $color2
				pointer-events none
				opacity 0
				
	.current-city-main
		display block
	.current-city
		// border 1px solid $color1
		size(100%)
		min-width 300px
		display inline-block
		padding 10px
		.title
			font-size 25rem
			margin-bottom 15px
			
	.user-auth
		flex-center()
		background $color3
		size(250px, 40px)
		cursor pointer


	.user-logged
		padding 20px
		text-align center
		span:first-letter
			text-transform uppercase
		.name
			font-size 20rem
			margin-bottom 5px
		.region
			font-size 15rem
		.exit
			font-size 13rem
			margin-top 10px
			text-decoration underline
			cursor pointer
			


	.user
		size(300px, auto)
		display flex
		flex-direction column
		border 2px solid $color3
		align-items center
		padding 20px
		>*
			flex 0 
			width 100%
			margin 15px 0
		.title
			white-space nowrap
			user-select none
			cursor pointer
			text-align center
			display flex
			flex-direction column
			font-size 15rem
			color $color2
			.select
				display inline-block
			.bold
				font-size 21rem
				color $color1
				text-decoration initial
			&.inverse
				.select:first-child
					order 1
					
		.field
			display flex
			justify-content space-between
			align-items center
			user-select none
			input
				padding 5px 10px
				font-size 18rem
				outline none
		.but
			background $color2
			width 70%
			box-sizing border-box
			user-select none
			padding 10px
			cursor pointer
			text-align center
			&:hover
				background $color3